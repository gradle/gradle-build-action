{
  "name": "gradle-build-action",
  "version": "1.0.0",
  "private": true,
  "description": "Execute Gradle Build",
  "scripts": {
    "postinstall": "patch-package",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "compile": "ncc build src/main.ts --out dist/main --source-map --no-source-map-register && ncc build src/post.ts --out dist/post --source-map --no-source-map-register",
    "test": "jest",
    "check": "npm run format && npm run lint",
    "build": "npm run check && npm run compile",
    "all": "npm run build && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gradle/gradle-build-action.git"
  },
  "keywords": [
    "github",
    "actions",
    "github-actions",
    "gradle"
  ],
  "license": "MIT",
  "dependencies": {
    "@actions/cache": "3.0.6",
    "@actions/core": "1.10.0",
    "@actions/exec": "1.1.1",
    "@actions/github": "5.1.1",
    "@actions/glob": "0.3.0",
    "@actions/http-client": "2.0.1",
    "@actions/tool-cache": "2.0.1",
    "string-argv": "0.3.1"
  },
  "devDependencies": {
    "@types/jest": "28.1.7",
    "@types/node": "16.11.21",
    "@types/unzipper": "0.10.5",
    "@typescript-eslint/parser": "5.40.1",
    "@vercel/ncc": "0.34.0",
    "eslint": "8.26.0",
    "eslint-plugin-github": "4.4.0",
    "eslint-plugin-jest": "27.1.3",
    "jest": "28.1.3",
    "js-yaml": "4.1.0", 
    "patch-package": "6.4.7",
    "prettier": "2.7.1",
    "ts-jest": "28.0.8",
    "typescript": "4.8.4"
  }
}
